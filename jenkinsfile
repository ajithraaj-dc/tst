pipeline {
    agent any
    
    environment {
        LABS = credentials('labcreds')
        JAVA_HOME='/opt/bitnami/java'
        PATH="${env.JAVA_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Setup Virtual Environment') {
            steps {
                script{
                    sh 'python3-mvenvretail_pipeline_venv'
                    sh './retail_pipeline_venv/bin/pipinstall--upgradepip'
                    sh './retail_pipeline_venv/bin/pipinstallpipenv'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                script{
                    sh './retail_pipeline_venv/bin/pipenvinstall'
                }
            }
        }
        stage('Test') {
            steps {
                script{
                    sh 'echo$JAVA_HOME'
                    sh 'echo$PATH'

                    sh './retail_pipeline_venv/bin/pipenvrunpytest'
                }
            }
        }
        stage('Package') {
            steps {
                sh 'zip-rretailproject.zip.-x"retail_pipeline_venv/*"'
            }
        }
        stage("Deploy"){
            steps{
                sh'sshpass-p$LABS_PSWscp-oStrictHostKeyChecking=no-r retailproject.zip$LABS_USR@g01.itversity.com:/home/itv014119/retailproject'
            }
        }
    }
} 